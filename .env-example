APPLICATION_PORT=8081
APPLICATION_PROJECT_NAME=identity-service

DATASOURCE_URL=jdbc:postgresql://postgres:5432/identity-service
DATASOURCE_USERNAME=dev
DATASOURCE_PASSWORD=dev

KAFKA_DELIVERY_TIMEOUT_MS=5000
KAFKA_REQUEST_TIMEOUT_MS=5000
KAFKA_MAX_BLOCK_MS=5000
SPRING_KAFKA_BOOTSTRAP_SERVERS=kafka:9092

ACCESS_TOKEN_LIFETIME=1d
ACCESS_TOKEN_PRIVATE_KEY_PATH=classpath:access-token/private-key.pem
ACCESS_TOKEN_PUBLIC_KEY_PATH=classpath:access-token/public-key.pem

REFRESH_TOKEN_LIFETIME=2d
REFRESH_TOKEN_PRIVATE_KEY_PATH=classpath:refresh-token/private-key.pem
REFRESH_TOKEN_PUBLIC_KEY_PATH=classpath:refresh-token/public-key.pem